<!DOCTYPE html>
<html lang="en">
<head>
    <title>ConUshop | Home </title>
    <% include ../../assets/components/header.ejs %>
</head>
<body>
<!-- for bootstrap working -->
<script type="text/javascript" src="/js/bootstrap-3.1.1.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/main.js"></script>
<!-- //for bootstrap working -->
<!-- navigator -->
<% include ../../assets/components/navigator.ejs %>
<!-- //navigator -->
<% include ../../assets/components/adminNav.ejs %>

<% if (typeof data =='undefined') { %>
<br>
<h2>Edit/View Items</h2>
<% } %>

<% if (typeof data !='undefined') { %>
<ul class="nav nav-tabs" style="list-style-type: none;">
    <li class="active"><a data-toggle="tab" href="#view">View</a></li>
    <li><a data-toggle="tab" href="#edit">Edit</a></li>
</ul>
<% } %>
<div class="tab-content">
    <div id="view" class="tab-pane fade in active">
        <div>
            <% if (typeof data!='undefined') { %>
            <table>
                <tr>
                    <td>Model</td>
                    <td>Brand</td>
                    <td>Processor</td>
                    <td>Ram</td>
                    <td>Storage</td>
                    <td>Cores</td>
                    <td>Dimensions</td>
                    <td>Weight</td>
                    <td>Price</td>
                </tr>
                <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                    <td class="model"><%= data[i].model %></td>
                    <td class="brand"><%= data[i].brand %></td>
                    <td class="processor"><%= data[i].processor %></td>
                    <td class="ram"><%= data[i].ram %></td>
                    <td class="storage"><%= data[i].storage %></td>
                    <td class="cores"><%= data[i].cores %></td>
                    <td class="dimensions"><%= data[i].dimensions %></td>
                    <td class="weight"><%= data[i].weight %></td>
                    <td class="price"><%= data[i].price %></td>
                </tr>
                <% } %>
            </table>
            <% } %>
        </div>
    </div>
    <div id="edit" class="tab-pane fade">
        <li>
            <div class="btn-group btn-toggle">
                <button class="btn btn-xs btn-default">Edit ON</button>
                <button class="btn btn-xs btn-danger active">Edit OFF</button>
            </div>
        </li>        <form method="post" action="/admin/addProdSpec">
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Product Table: </label>
                <div class="col-md-2">
                    <input type="text" class="" name="formProductType" value="Desktop" readonly>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Model Number</label>
                <div class="col-md-2">
                    <input type="text" class="" name="model" placeholder="model">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Brand</label>
                <div class="col-md-2">
                    <input type="text" class="" name="brand" placeholder="brand">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Processor</label>
                <div class="col-md-2">
                    <input type="text" class="" name="processor" placeholder="processor">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Ram</label>
                <div class="col-md-2">
                    <input type="text" class="" name="ram" placeholder="ram">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Storage</label>
                <div class="col-md-2">
                    <input type="text" class="" name="storage" placeholder="storage">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Cores</label>
                <div class="col-md-2">
                    <input type="text" class="" name="cores" placeholder="cores">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Dimensions</label>
                <div class="col-md-2">
                    <input type="text" class="" name="dimensions" placeholder="dimensions">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Weight</label>
                <div class="col-md-2">
                    <input type="text" class="" name="weight" placeholder="weight">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Price</label>
                <div class="col-md-2">
                    <input type="text" class="" name="price" placeholder="price">
                </div>
            </div>
            <button type="submit" class="">Add new Desktop item</button>
        </form></br>
        <div>
            <% if (typeof data!='undefined') { %>
            <table contenteditable="true" id="prodTable">
                <tr contenteditable="false">
                    <td>Model</td>
                    <td>Brand</td>
                    <td>Processor</td>
                    <td>Ram</td>
                    <td>Storage</td>
                    <td>Cores</td>
                    <td>Dimensions</td>
                    <td>Weight</td>
                    <td>Price</td>
                    <td>Edit</td>
                    <td>Delete</td>
                </tr>
                <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                    <td class="model" contenteditable="false"><%= data[i].model %></td>
                    <td class="brand"><%= data[i].brand %></td>
                    <td class="processor"><%= data[i].processor %></td>
                    <td class="ram"><%= data[i].ram %></td>
                    <td class="storage"><%= data[i].storage %></td>
                    <td class="cores"><%= data[i].cores %></td>
                    <td class="dimensions"><%= data[i].dimensions %></td>
                    <td class="weight"><%= data[i].weight %></td>
                    <td class="price"><%= data[i].price %></td>
                    <td contenteditable="false"><button onclick="updateProdSpec('Desktop', $(this).closest('tr'), '/admin/desktops')">Edit</button></td>
                    <td contenteditable="false"><button onclick="deleteProdSpec('Desktop', '<%= data[i].model%>', '/admin/desktops')">Delete</button></td>
                </tr>
                <% } %>
            </table>
            <% } %>
        </div>
    </div>
</div>

<!--%= jsonData %-->
<!-- footer -->
<% include ../../assets/components/footer.ejs %>
<!-- //footer -->

</body>
</html>
