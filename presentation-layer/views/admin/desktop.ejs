<!DOCTYPE html>
<html lang="en">
<head>
    <title>ConUshop | Home </title>
    <% include ../../assets/components/header.ejs %>
</head>
<body>
<!-- for bootstrap working -->
<script type="text/javascript" src="/js/bootstrap-3.1.1.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/main.js"></script>
<!-- //for bootstrap working -->
<!-- navigator -->
<% include ../../assets/components/navigator.ejs %>
<!-- //navigator -->

<% include ../../assets/components/adminNav.ejs %>

<form method="post" action="/admin/addProdSpec">
    <div class="AddDesktop">
        <label>Product Table: </label>
        <input type="text" class="" name="formProductType" value="Desktop" readonly>
    </div>
    <div class="AddDesktop">
        <label>modelNumber</label>
        <input type="text" class="" name="model" placeholder="model">
    </div>
    <div class="AddDesktop">
        <label>brand</label>
        <input type="text" class="" name="brand" placeholder="brand">
    </div>
    <div class="AddDesktop">
        <label>processor</label>
        <input type="text" class="" name="processor" placeholder="processor">
    </div>
    <div class="AddDesktop">
        <label>ram</label>
        <input type="text" class="" name="ram" placeholder="ram">
    </div>
    <div class="AddDesktop">
        <label>storage</label>
        <input type="text" class="" name="storage" placeholder="storage">
    </div>
    <div class="AddDesktop">
        <label>cores</label>
        <input type="text" class="" name="cores" placeholder="cores">
    </div>
    <div class="AddDesktop">
        <label>dimensions</label>
        <input type="text" class="" name="dimensions" placeholder="dimensions">
    </div>
    <div class="AddDesktop">
        <label>weight</label>
        <input type="text" class="" name="weight" placeholder="weight">
    </div>
    <div class="AddDesktop">
        <label>price</label>
        <input type="text" class="" name="price" placeholder="price">
    </div>
    <button type="submit" class="">Add new Desktop item</button>
</form></br>
<div>
    <% if (typeof data!='undefined') { %>
        <table contenteditable="true" id="prodTable">
            <tr contenteditable="false">
                <td>Model</td>
                <td>Brand</td>
                <td>Processor</td>
                <td>Ram</td>
                <td>Storage</td>
                <td>Cores</td>
                <td>Dimensions</td>
                <td>Weight</td>
                <td>Price</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        <% for(var i = 0; i < data.length; i++) { %>
            <tr>
                <td class="model" contenteditable="false"><%= data[i].model %></td>
                <td class="brand"><%= data[i].brand %></td>
                <td class="processor"><%= data[i].processor %></td>
                <td class="ram"><%= data[i].ram %></td>
                <td class="storage"><%= data[i].storage %></td>
                <td class="cores"><%= data[i].cores %></td>
                <td class="dimensions"><%= data[i].dimensions %></td>
                <td class="weight"><%= data[i].weight %></td>
                <td class="price"><%= data[i].price %></td>
                <td contenteditable="false"><button onclick="updateProdSpec('Desktop', $(this).closest('tr'), '/admin/desktops')">Edit</button></td>
                <td contenteditable="false"><button onclick="deleteProdSpec('Desktop', '<%= data[i].model%>', '/admin/desktops')">Delete</button></td>
            </tr>
        <% } %>
        </table>
    <% } %>
</div>
<!--%= jsonData %-->
<!-- footer -->
<% include ../../assets/components/footer.ejs %>
<!-- //footer -->

</body>
</html>
