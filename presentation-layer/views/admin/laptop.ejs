<!DOCTYPE html>
<html lang="en">
<head>
    <title>ConUshop | Home </title>
    <% include ../../assets/components/header.ejs %>
</head>
<body>
<!-- for bootstrap working -->
<script type="text/javascript" src="/js/bootstrap-3.1.1.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/main.js"></script>
<!-- //for bootstrap working -->
<!-- navigator -->
<% include ../../assets/components/navigator.ejs %>
<!-- //navigator -->
<% include ../../assets/components/adminNav.ejs %>

<form method="post" action="/admin/addProdSpec">
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Product Table: </label>
        <div class="col-md-2">
            <input type="text" class="" name="formProductType" value="Laptop" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Model Number:</label>
        <div class="col-md-2">
            <input type="text" class="" name="model" placeholder="model">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Brand:</label>
        <div class="col-md-2">
            <input type="text" class="" name="brand" placeholder="brand">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Display:</label>
        <div class="col-md-2">
            <input type="text" class="" name="display" placeholder="display">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Processor:</label>
        <div class="col-md-2">
            <input type="text" class="" name="processor" placeholder="processor">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Ram:</label>
        <div class="col-md-2">
            <input type="text" class="" name="ram" placeholder="ram">
        </div>
    </div>
        <div class="form-group row">
        <label class="col-md-2 col-form-label">Storage:</label>
        <div class="col-md-2">
            <input type="text" class="" name="storage" placeholder="storage">
        </div>
    </div>
        <div class="form-group row">
        <label class="col-md-2 col-form-label">Cores:</label>
        <div class="col-md-2">
            <input type="text" class="" name="cores" placeholder="cores">
        </div>
    </div>
        <div class="form-group row">
        <label class="col-md-2 col-form-label">OS:</label>
        <div class="col-md-2">
            <input type="text" class="" name="os" placeholder="os">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Battery:</label>
        <div class="col-md-2">
            <input type="text" class="" name="battery" placeholder="battery">
        </div>
    </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Camera:</label>
        <div class="col-md-2">
            <input type="text" class="" name="camera" placeholder="camera">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Touch:</label>
        <div class="col-md-2">
            <input type="text" class="" name="touch" placeholder="touch">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Dimensions:</label>
        <div class="col-md-2">
            <input type="text" class="" name="dimensions" placeholder="dimensions">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Weight:</label>
        <div class="col-md-2">
            <input type="text" class="" name="weight" placeholder="weight">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-form-label">Price:</label>
        <div class="col-md-2">
            <input type="text" class="" name="price" placeholder="price">
        </div>
    </div>
    <button type="submit" class="">Add new Laptop item</button>
</form></br>
<div>
    <% if (typeof data!='undefined') { %>
        <table contenteditable='true'>
            <tr contenteditable='false'>
                <td contenteditable='false'>Model</td>
                <td>Brand</td>
                <td>Display</td>
                <td>Processor</td>
                <td>Ram</td>
                <td>Storage</td>
                <td>Cores</td>
                <td>OS</td>
                <td>Battery</td>
                <td>Camera</td>
                <td>Touch</td>
                <td>Dimensions</td>
                <td>Weight</td>
                <td>Price</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        <% for(var i = 0; i < data.length; i++) { %>
            <tr>
                <td class="model" contenteditable="false"><%= data[i].model %></td>
                <td class="brand"><%= data[i].brand %></td>
                <td class="display"><%= data[i].display %></td>
                <td class="processor"><%= data[i].processor %></td>
                <td class="ram"><%= data[i].ram %></td>
                <td class="storage"><%= data[i].storage %></td>
                <td class="cores"><%= data[i].cores %></td>
                <td class="os"><%= data[i].os %></td>
                <td class="battery"><%= data[i].battery %></td>
                <td class="camera"><%= data[i].camera %></td>
                <td class="touch"><%= data[i].touch %></td>
                <td class="dimensions"><%= data[i].dimensions %></td>
                <td class="weight"><%= data[i].weight %></td>
                <td class="price"><%= data[i].price %></td>
                <td contenteditable="false"><button onclick="updateProdSpec('Laptop', $(this).closest('tr'), '/admin/laptops')">Edit</button></td>
                <td contenteditable="false"><button onclick="deleteProdSpec('Laptop', '<%= data[i].model%>', '/admin/laptops')">Delete</button></td>
            </tr>
        <% } %>
        </table>
    <% } %>
</div>
<!--%= jsonData %-->
<!-- footer -->
<% include ../../assets/components/footer.ejs %>
<!-- //footer -->

</body>
</html>
