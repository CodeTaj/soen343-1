<!DOCTYPE html>
<html lang="en">
<head>
    <title>ConUshop | Home </title>
    <% include ../components/header.ejs %>
</head>
<body>
<!-- navigator -->
<% include ../components/navigator.ejs %>
<!-- //navigator -->

<% include ../components/adminNav.ejs %>


<div class="container">
    <ul class="nav nav-tabs" style="list-style-type: none;" id="myTab">
        <li class="active"><a data-toggle="tab" href="#edit">Edit</a></li>
        <li><a data-toggle="tab" href="#view">View</a></li>
    </ul>
</div>

<!-- flash messages -->
<% include ../components/flashMessages.ejs %>

<div class="tab-content">
    <div id="view" class="tab-pane fade">
        <br><br>
        <h1 class="text-center">View Tablets</h1>
        <br><br>
        <!-- List of items -->
        <div>
            <hr>
            <% if (typeof data!='undefined') { %>
            <div class="container">
                <br><br><br>
                <h2 class="text-center">All Tablets</h2>
                <br>
                <table class="table table-striped table-condensed" id="prodTable">
                    <thead>
                    <tr>
                        <th>Model</th>
                        <th>Brand</th>
                        <th>Display</th>
                        <th>Processor</th>
                        <th>Ram</th>
                        <th>Storage</th>
                        <th>Cores</th>
                        <th>OS</th>
                        <th>Battery</th>
                        <th>Camera</th>
                        <th>Dimensions</th>
                        <th>Weight</th>
                        <th>Price</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i < data.length; i++) { %>
                    <tr>
                        <td class="model"><%= data[i].model %></td>
                        <td class="brand"><%= data[i].brand %></td>
                        <td class="display"><%= data[i].display %></td>
                        <td class="processor"><%= data[i].processor %></td>
                        <td class="ram"><%= data[i].ram %></td>
                        <td class="storage"><%= data[i].storage %></td>
                        <td class="cores"><%= data[i].cores %></td>
                        <td class="os"><%= data[i].os %></td>
                        <td class="battery"><%= data[i].battery %></td>
                        <td class="camera"><%= data[i].camera %></td>
                        <td class="dimensions"><%= data[i].dimensions %></td>
                        <td class="weight"><%= data[i].weight %></td>
                        <td class="price"><%= data[i].price %></td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
            <% } %>
        </div>
    </div>
    <div id="edit" class="tab-pane fade in active">
        <br><br>
        <h1 class="text-center">Manage Tablets</h1>
        <br><br>
        <div class="container">


            <div id="selector" class="btn-group" data-toggle="buttons-radio">
                <% if (!editIsOn) { %>
                <button name="editToggle" class="btn btn-default" onclick="beginSession('/admin/tablets')">Turn Edit ON</button>
                <% } %>
                <% if (editIsOn) { %>
                <button name="editToggle" class="btn btn-danger" onclick="endSession('/admin/tablets')">Turn Edit OFF</button>
                <% } %>
            </div>
            <br><br>

            <!-- Item register form -->
            <h1 class="well">Register a  new TABLET</h1>
            <div class="col-lg-12 well">
                <div class="row">
                    <form method="post" action="/admin/addProdSpec">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-6 AddTablet">
                                    <label>Product Table: </label>
                                    <input type="text" class="form-control" name="prodType" value="Tablet" readonly>
                                </div>
                                <div class="col-sm-6 AddTablet">
                                    <label>Model Number</label>
                                    <input type="text" class="form-control" name="model" placeholder="model">
                                </div>
                            </div>
                            <div class="AddTablet">
                                <label>Brand</label>
                                <input type="text" class="form-control" name="brand" placeholder="brand">
                            </div>
                            <div class="row">
                                <div class="col-sm-3 AddTablet">
                                    <label>Display</label>
                                    <input type="text" class="form-control" name="display" placeholder="display">
                                </div>
                                <div class="col-sm-3 AddTablet">
                                    <label>Processor</label>
                                    <input type="text" class="form-control" name="processor" placeholder="processor">
                                </div>
                                <div class="col-sm-3 AddTablet">
                                    <label>Ram</label>
                                    <input type="text" class="form-control" name="ram" placeholder="ram">
                                </div>
                                <div class="col-sm-3 AddTablet">
                                    <label>Storage</label>
                                    <input type="text" class="form-control" name="storage" placeholder="storage">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 AddTablet">
                                    <label>Cores</label>
                                    <input type="text" class="form-control" name="cores" placeholder="cores">
                                </div>
                                <div class="col-sm-6 AddTablet">
                                    <label>OS</label>
                                    <input type="text" class="form-control" name="os" placeholder="os">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 AddTablet">
                                    <label>Battery</label>
                                    <input type="text" class="form-control" name="battery" placeholder="battery">
                                </div>
                                <div class="col-sm-6 AddTablet">
                                    <label>Camera</label>
                                    <input type="text" class="form-control" name="camera" placeholder="camera">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 AddTablet">
                                    <label>Dimensions</label>
                                    <input type="text" class="form-control" name="dimensions" placeholder="dimensions">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 AddTablet">
                                    <label>Weight</label>
                                    <input type="text" class="form-control" name="weight" placeholder="weight">
                                </div>
                                <div class="col-sm-6 AddTablet">
                                    <label>Price</label>
                                    <input type="text" class="form-control" name="price" placeholder="price">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-lg btn-success">Add tablet</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- List of items -->
            <div>
                <hr>
                <% if (typeof data!='undefined') { %>
                <div class="container">
                    <br><br><br>
                    <h2 class="text-center">Tablet Catalog</h2>
                    <p class="text-center">Simply modify any field and click edit to save</p>
                    <br>
                    <table class="table table-striped table-condensed" contenteditable="true" id="prodTable">
                        <thead>
                        <tr contenteditable="false">
                            <th>Model</th>
                            <th>Brand</th>
                            <th>Display</th>
                            <th>Processor</th>
                            <th>Ram</th>
                            <th>Storage</th>
                            <th>Cores</th>
                            <th>OS</th>
                            <th>Battery</th>
                            <th>Camera</th>
                            <th>Dimensions</th>
                            <th>Weight</th>
                            <th>Price</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for(var i = 0; i < data.length; i++) { %>
                        <tr>
                            <td class="model" contenteditable="false"><%= data[i].model %></td>
                            <td class="brand"><%= data[i].brand %></td>
                            <td class="display"><%= data[i].display %></td>
                            <td class="processor"><%= data[i].processor %></td>
                            <td class="ram"><%= data[i].ram %></td>
                            <td class="storage"><%= data[i].storage %></td>
                            <td class="cores"><%= data[i].cores %></td>
                            <td class="os"><%= data[i].os %></td>
                            <td class="battery"><%= data[i].battery %></td>
                            <td class="camera"><%= data[i].camera %></td>
                            <td class="dimensions"><%= data[i].dimensions %></td>
                            <td class="weight"><%= data[i].weight %></td>
                            <td class="price"><%= data[i].price %></td>
                            <td contenteditable="false"><button class="btn btn-warning" onclick="updateProdSpec('Tablet', $(this).closest('tr'), '/admin/tablets')">Edit</button></td>
                            <td contenteditable="false"><button class="btn btn-danger" onclick="deleteProdSpec('Tablet', '<%= data[i].model%>', '/admin/tablets')">Delete</button></td>
                        </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!--%= jsonData %-->
<!-- footer -->
<% include ../components/footer.ejs %>
<!-- //footer -->

</body>
</html>
