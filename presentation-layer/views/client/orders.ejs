<html lang="en">
    <head>
        <title>ConUshop | Home </title>
        <% include ../components/header.ejs %>
    </head>
    <body>
    
    <% include ../components/navigator.ejs %>
    <br>
    <br>
    <br>
    <br>
    <div class="client_content table-responsive">
        <h1>Orders</h1>
        <div class="content">
            <% if (typeof data!='undefined') { %>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Order Date</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i < data.length; i++) { %>
                        <tr>
                            <td class="serial"><%= data[i].orderId %></td>
                            <td class="model"><%= data[i].orderDate%></td>
                            <td class="brand"><%= data[i].total %></td>
                            <td>
                                <form method="get" action="/client/order/details/<%= data[i].orderId %>">
                                    <button type="submit">View Details</button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>

<% include ../components/footer.ejs %>
</body>
</html>
    